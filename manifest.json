{
  "manifest_version": 3,
  "name": "Commute Check",
  "version": "2.1.0",
  "description": "See Luas, DART & Irish Rail on Daft.ie maps. Find homes near public transit. No data collected.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.daft.ie/*"],
  "content_scripts": [
    {
      "matches": ["https://www.daft.ie/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageScript.js", "data/*.json"],
      "matches": ["https://www.daft.ie/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
